default namespace r = "http://caucho.com/ns/resin"

include "env.rnc"
include "webbeans.rnc"
include "webbeans_1_1.rnc"

start = w_beans | compat_beans | r_beans | b_beans

r_beans = element beans {
  r_env-Content

  & r_bean-discovery-mode*

  & r_alternatives*

  & r_decorators*
  
  & r_interceptors*

  & element system { r_env-Content }*
}

r_bean-discovery-mode = attribute bean-discovery-mode {
  string
}

r_alternatives = element alternatives {
  r_class*
  & r_stereotype*
}

r_decorators = element decorators {
  r_class*
}

r_interceptors = element interceptors {
  r_class*
}

r_stereotype = element stereotype {
  string
}
